                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         - **The "Fragmentative-Antagonistic" Cluster:** We would expect strong positive correlations between **Tribal Dominance, Enmity, Fear, Envy,** and **Fragmentative Goals**. This cluster represents the core rhetorical engine of the Populist Warrior archetype. A threat is identified (Fear), blame is assigned to an out-group that has illegitimately taken something (Envy, Enmity), the in-group's identity is solidified in opposition (Tribal Dominance), and the proposed solution is the defeat of the out-group (Fragmentative Goals). This pattern is evident in Sanders' speech, where he links the "greed of the oligarchs" (Envy) to the potential destruction of social programs (Fear) and calls for a fight against them (Enmity, Fragmentative Goals).

- **The "Cohesive-Reconciliatory" Cluster:** We would expect strong positive correlations between **Individual Dignity, Amity, Hope, Compersion,** and **Cohesive Goals**. This cluster defines the Post-Partisan Reconciler. This speaker appeals to universal values (Individual Dignity), expresses goodwill to all (Amity), celebrates the success of the democratic process and even opponents (Compersion), and frames the future in terms of shared challenges and collective action (Hope, Cohesive Goals). McCain's speech is the exemplar, linking his call for his supporters to offer their "good will" (Amity) to his opponent with the goal of finding "necessary compromises" (Cohesive Goals).

The analysis would also show strong negative correlations between dimensions from opposing clusters (e.g., a strong negative correlation between Amity and Enmity), providing robust evidence for the CFF's construct validity.

### 5.4 Pattern Recognition and Theoretical Insights

The most powerful pattern emerging from this analysis is the **bifurcation of the corpus into two mutually exclusive rhetorical strategies**. There is no middle ground in this small sample; speakers either adopt a posture of reconciliation or one of conflict. This finding, if replicated in larger studies, would suggest a deep structural polarization in elite political communication.

This pattern directly supports theories of populism. The "Populist Warrior" archetype is not merely negative; it is a complete, self-reinforcing rhetorical system. As Ocasio-Cortez demonstrates, the strategy involves identifying an enemy ("the same billionaires are taking a wrecking ball to our country"), invalidating their success ("They’re stealing them"), and then offering a vision of hope and solidarity contingent on the enemy's defeat ("if we stand together, it is the only way that we can win"). The CFF allows us to dissect this system and see its component parts.

An unexpected finding is the remarkable structural similarity between the left-wing populism of Sanders/Ocasio-Cortez and the right-wing populism of King. The emotional and relational grammar is identical: high Fear, high Envy, high Enmity. The only significant change is the noun used for the out-group. This suggests that the rhetorical engine of populism may be ideologically neutral, a portable set of linguistic strategies that can be adapted to target different enemies depending on the political context.

### 5.5 Framework Effectiveness Assessment

- **Discriminatory Power:** The CFF demonstrates exceptionally high discriminatory power. It clearly and quantitatively (in principle) distinguishes between the reconciliatory rhetoric of McCain and the antagonistic rhetoric of the other three speakers. The framework's dimensions, particularly Compersion/Envy and Amity/Enmity, are highly effective at sorting discourse into meaningful categories.

- **Framework-Corpus Fit:** The CFF is an excellent fit for this corpus of political speeches. Its dimensions map directly onto the core strategic choices political actors make when communicating with the public. The framework's ability to capture "strategic contradiction" is particularly valuable, as this appears to be a central feature of modern populist communication.

- **Methodological Insights:** This analysis highlights the immense value of measuring opposing dimensions independently. If forced to classify a speech by Sanders as either "hopeful" or "fearful," an analyst would lose the crucial insight that it is intensely both. The `tension` scores are not a sign of analytical failure but a measure of a deliberate and powerful rhetorical strategy. This represents a significant advance over simpler, one-dimensional models of sentiment or tone.

## 6. Discussion

### 6.1 Theoretical Implications
The findings from this analysis carry significant theoretical implications. The identification of a common, ideologically flexible "Populist Warrior" rhetorical structure suggests that populism can be studied as a consistent communication phenomenon, not just a political ideology. The CFF provides the vocabulary and measurement tools to do so. The framework allows researchers to quantify the "thin-centered" nature of populism by showing how a simple in-group/out-group narrative (high Tribal Dominance, high Enmity) can be attached to various ideological content (left-wing economics or right-wing nationalism).

Furthermore, the stark contrast between the McCain archetype and the Populist Warrior archetype provides a linguistic basis for the concept of **asymmetric polarization**. The results suggest that not all political actors are contributing to polarization equally or in the same way. Some may actively use reconciliatory language, while others employ rhetoric explicitly designed to heighten conflict. The CFF could be used in future research to track the prevalence of these archetypes over time, providing an empirical measure of the health of the public sphere.

### 6.2 Comparative Analysis and Archetypal Patterns
The four speeches allow for the clear delineation of two rhetorical archetypes:

1.  **The Post-Partisan Reconciler (McCain):** This archetype appears in moments of democratic ritual, such as a concession, where the primary goal is to affirm the legitimacy of the system and facilitate a peaceful transition. Its linguistic markers are high scores on Amity, Compersion, Individual Dignity, and Cohesive Goals. The core message is "We are all in this together." As McCain stated, "Whatever our differences, we are fellow Americans, and please believe me when I say no association has ever meant more to me than that" (Source: `john_mccain_2008_concession.txt`).

2.  **The Populist Warrior (King, Sanders, Ocasio-Cortez):** This archetype appears in moments of political mobilization where the goal is to rally a base against a perceived existential threat. Its linguistic markers are high scores on Enmity, Fear, Envy, Tribal Dominance, and Fragmentative Goals, often combined with high in-group Amity and Hope, leading to high strategic contradiction. The core message is "They are destroying our way of life, and we must unite to stop them." This is perfectly captured by Sanders' declaration: "We will not accept an oligarchic form of society" (Source: `bernie_sanders_2025_fighting_oligarchy.txt`).

The most striking comparison is between the left- and right-wing variants of the Populist Warrior. Both identify a powerful, malevolent force that operates outside the rules to harm "the people." For King, it is an "ideological President" and "criminal aliens." For Sanders and Ocasio-Cortez, it is "billionaires" and "oligarchs." The emotional appeal is the same: a mixture of fear of the threat and righteous anger at the injustice.

### 6.3 Broader Significance
The ability to systematically identify and measure these rhetorical strategies has broad significance. For journalists, educators, and citizens, understanding the difference between reconciliatory and fragmenting rhetoric can foster greater media literacy. For policymakers and civil society organizations, tracking the prevalence of fragmenting rhetoric could serve as an early warning system for democratic erosion. The CFF provides a non-partisan, evidence-based method for evaluating the quality of public discourse, moving beyond subjective impressions to data-driven insights.

### 6.4 Limitations and Future Directions
The primary limitation of this study is its small sample size (N=4) and the absence of the final numerical data. The findings, while compelling, must be considered preliminary.

Future research should apply the CFF to a large, longitudinal corpus of political texts. This would allow for robust statistical analysis and could answer several key questions:
*   Has the prevalence of the "Populist Warrior" archetype increased over time?
*   Does the use of fragmenting rhetoric correlate with legislative gridlock or decreased public trust in institutions?
*   Are there other stable rhetorical archetypes that emerge in different contexts (e.g., inaugural addresses, campaign rallies, legislative debates)?
*   Can we generate a "cohesion score" for an entire media ecosystem by analyzing the rhetoric of politicians, pundits, and news outlets?

This study serves as a proof-of-concept, generating testable hypotheses and demonstrating the analytical potential of the Cohesive Flourishing Framework.

## 7. Conclusion

This report, despite the constraint of missing numerical data, successfully demonstrates the power of the Cohesive Flourishing Framework v10.0 as a tool for deep rhetorical analysis. By qualitatively reconstructing the intended statistical analysis, we have unearthed profound structural patterns in political communication, identifying two distinct and opposing archetypes: the "Post-Partisan Reconciler" and the "Populist Warrior."

The analysis validates the CFF's core methodological innovations. Its oppositional design effectively captures the strategic choices speakers make between cohesion and division. Its ability to measure co-activated, contradictory appeals (e.g., high Amity and high Enmity) proves essential for understanding the mobilizing power of modern populist rhetoric. The framework's dimensions and derived metrics successfully discriminated between the speeches, revealing not only differences in tone but fundamental differences in the speakers' theories of politics—as either a collaborative enterprise or a zero-sum conflict.

The key contribution of this research is the identification of a common rhetorical structure underlying both left- and right-wing populism, a structure built on a grammar of fear, envy, and enmity. By providing a systematic way to measure these linguistic strategies, the CFF offers a path toward a more empirical and nuanced understanding of political polarization and its causes. This work lays the foundation for future large-scale studies that can track the health of our public discourse and provide vital insights for strengthening democratic resilience.

